<% document ||= @document %>

<div class="geoblacklight-view-panel" >
  <dl class="dl-horizontal col-lg-10">

    <dt>Description</dt>
    <dd><%= @document["dc_description_s"]%></dd>

    <dt>Alternate title</dt>
    <dd><%= @document["dc_alternate_sm"]%></dd>

    <dt>Author</dt>
    <dd><%= @document["dc_creator_sm"]%></dd>

    <dt>Author Facet</dt>
    <dd><%= @document["dc_creator_facet"]%></dd>

    <dt>Contributor</dt>
    <dd><%= @document["dc_contributor_sm"]%></dd>

    <dt>Date</dt>
    <dd><%= @document["dc_created_sm"]%></dd>

    <dt>Data Type</dt>
    <dd><%= @document["dc_type_s"]%></dd>

    <dt>Access</dt>
    <dd><%= @document["dc_rights_s"]%></dd>

    <dt>URL</dt>
    <dd><%= link_to @document["dc_references_s"], @document["dc_references_s"] %></dd>
    <!--TODO: Fish out the correct links from JSON object here-->

    <%# TODO: Change these methods to use the document.fields that are correct %>
    <% if !@document.references.nil? && !@document.references.url.nil? %>
      <dt>More details at</dt>
      <dd itemprop="url"><%= link_to @document.references.url.endpoint, @document.references.url.endpoint %></dd>
    <% end %>
  </dl>
</div>

