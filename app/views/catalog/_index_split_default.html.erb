<% # header bar for doc items in index view -%>
<%= content_tag :div, class: 'documentHeader row', data: { layer_id: document[:uuid], bbox: document[:solr_bbox], geom: document[:solr_geom] } do %>
  <div class='status-icons'>
    <%= geoblacklight_icon(document['layer_geom_type_s']) %>
    <%= geoblacklight_icon(document['dct_provenance_s']) %>
    <%= geoblacklight_icon(document['dc_rights_s']) %>
  </div>
  <h5 class="index_title col-sm-9s cosl-lg-10 text-span">

    <% counter = document_counter_with_offset(document_counter) %>

    <span class="document-counter">
      <%= t('blacklight.search.documents.counter', :counter => counter) if counter %>
    </span>
    <%= link_to_document document, document_show_link_field(document), counter: counter, title: document['dc_title_s'] %>
  </h5>


  <div class='col-md-12 more-info-area'>
    <div class='collapse' data-collapse-target="<%= document['uuid'] %>">
      <small>
        <%= document['solr_year_i'] %>. <i><%= document['dc_creator_sm'].nil?? '' : document['dc_creator_sm'].join(', ') %></i>. <%= snippit(document['dc_description_s']) %>. <%= document['dc_publisher_s'] %>.
      </small>
    </div>
  </div>
<% end %>


<!--New HTML formatting for document (html el article...) start -->

<article class="search-result row document <%= render_document_class document %>" itemscope itemtype="<%= document.itemtype %>">
  <div class="col-xs-12 col-sm-12 col-md-3">
    <!--TODO Bootstrap thumbnail class is messing with this not quite right and span sizing is wrong-->
    <a href="#" title="Lorem ipsum" class="thumbnail"><img src="http://lorempixel.com/250/140/people" alt="Lorem ipsum"/></a>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-2">
    <ul class="meta-search">
      <li><i class="glyphicon glyphicon-calendar"></i> <span>02/15/2014</span></li>
      <li><i class="glyphicon glyphicon-time"></i> <span>4:28 pm</span></li>
      <li><i class="glyphicon glyphicon-tags"></i> <span>People</span></li>
      <li><i class="glyphicon glyphicon-map-marker"></i> <span>GIS</span></li>
    </ul>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-7 excerpet">
    <h3 class="result-title"><a href="#" title="">Title</a></h3>



    <%= render_document_partials document, blacklight_config.view_config(document_index_view_type).partials %>
  </div>
  <span class="clearfix borda"></span>
</article>

<!--new document formatting end-->