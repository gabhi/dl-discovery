
<form class="vndl-search">

  <!-- text search -->
  <fieldset>
    <div class="form-group">
      <legend class="sr-only">Text searching</legend>
      <label class="sr-only" for="catalog_search">search for records</label>

      <div class="input-group">
        <input class="form-control input-lg" id="catalog_search" name="q" placeholder="search for records" value="<%= get_search_query_text %>" tabindex="1" type="text"/>

        <div class="input-group-btn">
          <button type="submit" class="search-submit btn-lg btn btn-primary" id="search-submit-header" tabindex="2">
             Search
            <!--<i class="search-icon glyphicon glyphicon-search"></i>-->
          </button>
        </div>
      </div>
    </div>
  </fieldset>

  <!-- map search -->
  <fieldset id="mapfieldset">
    <legend class="col-md-2">Map</legend>
    <div class="mapnotch"></div>
    <div class="col-md-10 form-group">
      <div class="checkbox"><label>
        <input type="checkbox" name="showmap" <%= get_map_checkbox %> value="checked"/> show results on a map
      </label></div>

      <button id="search-map-button" class="btn btn-default" type="button">
        Search visible map area
      </button>

    </div>
  </fieldset>


  <%= render 'did_you_mean' %>


  <%= render 'constraints' %>


  <%= render 'facets' %>


  <%= render 'sort_and_per_page' %>


</form>