<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Metadata</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">

    </div>
  </div>
  <div class="row">




    <div class="col-lg-4 col-lg-offset-8">
      <input type="search" id="search" value="" class="form-control" placeholder="Search for text">
    </div>
  </div>
  <div role="tabpanel">

    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#document-tab" aria-controls="Document" role="tab" data-toggle="tab">Document</a></li>
      <li role="presentation"><a href="#metadata-tab" aria-controls="References" role="tab" data-toggle="tab">References</a></li>
      <li role="presentation"><a href="#file-tab" aria-controls="Metadata" role="tab" data-toggle="tab">File Metadata</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="document-tab">


        <div class="row">
          <div class="col-lg-12">
            <table class="table table-striped" id="table">
              <thead>
              <tr>
                <th></th>
                <th></th>

              </tr>
              </thead>
              <tbody>
              <tr>
                <th>Title</th>
                <td><%= @document["dc_title_s"] %></td>

              </tr>
              <tr>
                <th>Description</th>
                <td><%= @document["dc_description_s"] %></td>

              </tr>
              <tr>
                <th>Author</th>
                <td>Tanya Russell</td>

              </tr>
              </tbody>
            </table>
            <hr>
          </div>
        </div>
      </div>


      <div role="tabpanel" class="tab-pane" id="metadata-tab">

        <div class="row">
          <div class="col-lg-12">
            <table class="table table-striped" id="table">
              <thead>
              <tr>
                <th></th>
                <th></th>

              </tr>
              </thead>
              <tbody>
              <tr>
                <th>First column</th>
                <td>jQuery</td>

              </tr>
              <tr>
                <th>Second column</th>
                <td>Ipsum</td>

              </tr>
              <tr>
                <th>Third column</th>
                <td>More</td>

              </tr>
              </tbody>
            </table>
            <hr>
          </div>
        </div>

      </div>
      <div role="tabpanel" class="tab-pane" id="file-tab">


        <div class="row">
          <div class="col-lg-12">
            <table class="table table-striped" id="table">
              <thead>
              <tr>
                <th></th>
                <th></th>

              </tr>
              </thead>
              <tbody>
              <tr>
                <th>UUID</th>
                <td><%= @document["uuid"] %></td>

              </tr>
              <tr>
                <th>Second column</th>
                <td>Ipsum</td>

              </tr>
              <tr>
                <th>Third column</th>
                <td>More</td>

              </tr>
              </tbody>
            </table>
            <hr>
          </div>
        </div>
      </div>



    </div>
  </div>
</div>