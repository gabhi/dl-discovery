<%  # local params:
    # label
    # value
    # options =>
    #   :remove => url for a remove constraint link
    #   :classes => array of classes to add to container span
    options ||= {}
%>





<div class="btn-group" role="group" aria-label="location filter">
    <div class="btn-group appliedFilter constraint <%= options[:classes].join(" ") if options[:classes] %>" role="group">
      <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">

        <% unless label.blank? %>
            <span class="filterName"><%= label %></span>
        <% end %>
      </button>
      <ul class="dropdown-menu dropdown-menu" role="menu">
        <li><a href="#">Add another location filter</a></li>
        <li><a href="#">Remove this filter</a></li>
      </ul>
    </div>

    <div class="btn-group appliedFilter constraint <%= options[:classes].join(" ") if options[:classes] %>" role="group">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
        <% unless value.blank? %>
            <%= content_tag :span, value, class: 'filterValue', title: value %>
        <% end %>
        <i class="fa fa-angle-down" aria-hidden="true"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><a href="#">Add another location filter</a></li>
        <li><a href="#">Remove this filter</a></li>
      </ul>
    </div>
</div>
